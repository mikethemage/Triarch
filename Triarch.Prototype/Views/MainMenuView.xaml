<UserControl x:Class="Triarch.Prototype.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Triarch.Prototype.Views"
             xmlns:vm="clr-namespace:Triarch.Prototype.ViewModels"
             d:Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:MainMenuViewModel}">
    <Grid>
        <ComboBox x:Name="SystemSelector" ItemsSource="{Binding Path=SystemSelector}" SelectedItem="{Binding Path=SelectedSystem}" HorizontalAlignment="Left" Margin="151,123,0,0" VerticalAlignment="Top" Width="120">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=.}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="button" Content="Button" Command="{Binding Path=EditNewEntityCommand}" HorizontalAlignment="Left" Margin="151,189,0,0" VerticalAlignment="Top" Height="28" Width="120" />

    </Grid>
</UserControl>
